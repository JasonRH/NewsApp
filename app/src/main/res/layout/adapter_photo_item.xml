<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/photo_item_user_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/photo_item_user_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical" />

    </LinearLayout>

    <TextView
        android:id="@+id/photo_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <ImageView
            android:id="@+id/photo_item_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"  />

        <cn.jzvd.JZVideoPlayerStandard
            android:id="@+id/photo_item_video"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/photo_item_simpleDraweeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/photo_item_digg_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="8dp"
                android:src="@mipmap/digg" />

            <TextView
                android:id="@+id/photo_item_digg_count"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginRight="18dp"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/photo_item_bury_image"
                android:layout_width="15dp"
                android:layout_height="14dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:src="@mipmap/bury" />

            <TextView
                android:id="@+id/photo_item_bury_count"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginRight="18dp"
                android:gravity="center_vertical"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="8dp"
                android:src="@mipmap/comments" />

            <TextView
                android:id="@+id/photo_item_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginRight="18dp"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="18dp"
            android:layout_toLeftOf="@+id/photo_item_share_count"
            android:src="@mipmap/share" />

        <TextView
            android:id="@+id/photo_item_share_count"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:text="20"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>